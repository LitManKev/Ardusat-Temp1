#include <SPI.h>
#include <Arduino.h>
#include <Wire.h>
#include <ArdusatSDK.h>

ArdusatSerial serialConnection(SERIAL_MODE_HARDWARE_AND_SOFTWARE, 8, 9);

Temperature temp;


void setup(void)
{
  serialConnection.begin(9600);

  temp.begin();

if (Temperature temp== 20 , 21 , 22);
  display.setTextColor(WHITE);
  display.setcursor(35,30);
  display.println("Comfortable");
  display.display();

else if (Temperature temp=<19);
  display.setTextColor(WHITE);
  display.setcursor(35,30);
  display.println("Cold");
  display.display();

else
  display.setTextColor(WHITE);
  display.setcursor(35,30);
  display.println("Hot");
  display.display();
}

void loop(void)
{
  
  serialConnection.println(temp.readToJSON("ambientTemp"));

  delay(100);
}
